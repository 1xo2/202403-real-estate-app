{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",    
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowJs": true, // Enable JavaScript file compilation if needed
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    ////////////////
    // NEW â†“
    // "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./global.d.ts",    
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}